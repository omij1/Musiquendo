<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="@dimen/license_border_radius" />
        </shape>
    </item>
    <item
        android:left="@dimen/license_border_left"
        android:right="@dimen/license_border_right"
        android:top="@dimen/license_border_top"
        android:bottom="@dimen/license_border_bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor"/>
            <corners android:radius="@dimen/license_border_header_radius" />
        </shape>
    </item>
</layer-list>