<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/album_item_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/album_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_item_height"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/album_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/album_item_image"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="13sp"
            tools:text="Item title"/>

        <TextView
            android:id="@+id/album_item_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/album_item_title"
            android:background="@color/colorAccent"
            android:textStyle="italic"
            android:textSize="10sp"
            tools:text="Autor"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>