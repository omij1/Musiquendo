<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/license_header_size"
    android:orientation="horizontal"
    android:background="@drawable/license_border">

        <TextView
            android:id="@+id/license_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            style="@style/LicenseHeaderText"/>

        <ImageButton
            android:id="@+id/license_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            style="@style/LicenseHeaderButton"/>

</LinearLayout>