<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="@dimen/item_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/library_item_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_cover_height"
            style="@style/LibraryItemCover"/>

        <TextView
            android:id="@+id/library_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/library_item_cover"
            style="@style/LibraryItemName"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>